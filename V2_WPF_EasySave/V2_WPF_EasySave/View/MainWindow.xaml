<Window x:Class="EasySaveWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:V2_WPF_EasySave.ViewModel"
        Title="Easy Save V2" Height="400" Width="600">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Jobs enregistrés :" FontSize="20" Margin="0 0 0 10" />
            <ListBox ItemsSource="{Binding SavedJobs}"
                     SelectedItem="{Binding SelectedJob}"
                     DisplayMemberPath="Name"
                     FontSize="16"
                     Height="200"/>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                <Button Content="Créer" Command="{Binding CreateCommand}" Width="80" />
                <Button Content="Modifier" Command="{Binding ModifyCommand}" Width="80" />
                <Button Content="Supprimer" Command="{Binding DeleteCommand}" Width="80" />
                <Button Content="Exécuter" Command="{Binding ExecuteCommand}" Width="80" />
                <Button Content="Rafraîchir" Command="{Binding RefreshCommand}" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>