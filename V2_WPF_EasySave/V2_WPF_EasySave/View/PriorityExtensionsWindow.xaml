<Window x:Class="V2_WPF_EasySave.View.PriorityExtensionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extensions prioritaires" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Extensions prioritaires (ex: .docx, .pdf)" FontWeight="Bold" Margin="0 0 0 10" />
        <ListBox x:Name="ExtensionsListBox" Height="150" />
        
        <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
            <TextBox x:Name="ExtensionTextBox" Width="200" Margin="0 0 10 0" />
            <Button Content="Ajouter" Width="80" Click="AddExtension_Click" />
        </StackPanel>

        <Button Content="Supprimer la sélection" Click="RemoveExtension_Click" Margin="0 0 0 10" />
        <Button Content="Enregistrer" Click="Save_Click" HorizontalAlignment="Right" Width="100" />
    </StackPanel>
</Window>