<Window x:Class="V2_WPF_EasySave.View.JobEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Editor" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nom du job:" Grid.Row="0"/>
        <TextBox Grid.Row="0" Margin="100,0,0,5" Text="{Binding CurrentJob.Name, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Répertoire source:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Margin="100,0,0,5" Text="{Binding CurrentJob.SourceDirectory, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Répertoire cible:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Margin="100,0,0,5" Text="{Binding CurrentJob.TargetDirectory, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Type de job:" Grid.Row="3" VerticalAlignment="Center" />
        <StackPanel Grid.Row="3" Margin="100,0,0,5" Orientation="Horizontal">
            <RadioButton Content="Complet" GroupName="JobType" IsChecked="{Binding CurrentJob.JobType, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}" />
            <RadioButton Content="Différentiel" GroupName="JobType" Margin="20,0,0,0" IsChecked="{Binding CurrentJob.JobType, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}" />
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Valider" Width="80" Margin="0,0,10,0" IsEnabled="{Binding Path=SaveCommand.CanExecute, RelativeSource={RelativeSource Self}}" Command="{Binding SaveCommand}" />
            <Button Content="Annuler" Width="80" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>