<Window x:Class="EasySaveWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:V2_WPF_EasySave.ViewModel"
        Title="Liste des Jobs" Height="300" Width="400">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Jobs enregistrés :" FontSize="20" Margin="0 0 0 10" />
            <ListBox ItemsSource="{Binding SavedJobs}" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>